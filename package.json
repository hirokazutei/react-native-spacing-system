    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.4.2",
    "flow": "^0.2.3",
    "flow-bin": "^0.98.1",
    "flow-copy-source": "^2.0.8",
    "flow-typed": "^2.6.1",
    "jest": "^20.0.4",
    "jest-cli": "^20.0.4",
