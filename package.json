  "license": "SEE LICENSE IN LICENSE",
  "peerDependencies": {
    "react": "^16.8.0",
    "react-native": "^0.59.0"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/hirokazutei/react-native-spacing-system.git"
  },
  "bugs": {
    "url": "https://github.com/hirokazutei/react-native-spacing-system/issues"
  },
  "homepage": "https://github.com/hirokazutei/react-native-spacing-system#readme",
  "dependencies": {
    "@types/react": "^16.8.0",
    "@types/react-native": "^0.60.0",
    "react-native": "^0.60.0"
